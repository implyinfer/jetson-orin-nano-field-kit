# YOLO Ultralytics Vision App Configuration
# Copy this file to .env and modify as needed

# Camera Configuration
CAMERA_DEVICE=/dev/video0
CAMERA_SENSOR_ID=0
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720
CAMERA_FPS=30
CAMERA_FLIP_METHOD=0

# Model Configuration
YOLO_MODEL=yolov8n.pt
CONFIDENCE_THRESHOLD=0.25
IOU_THRESHOLD=0.45
DEVICE=cuda:0

# Display Configuration
SHOW_DISPLAY=false
SHOW_LABELS=true
SHOW_CONFIDENCE=true

# Output Configuration
SAVE_FRAMES=false
OUTPUT_DIR=output
SAVE_INTERVAL=30

# Performance
MAX_FRAMES=0  # 0 = unlimited
VERBOSE=false
